
{{#each erros}}

<div class="alert alert-danger"> {{texto}}</div>

{{/each}}



<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/edit"  method="post">
            <label for="titulo">Titulo:</label>
        <input type="hidden" name="id" value="{{postagens._id}}">

            <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{postagens.slug}}">

            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" class="form-control" value="{{postagens.descricao}}">

            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" >{{postagens.conteudo}}</textarea>

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="form-select" value="{{postagens.categoria}}">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>

                {{else}}
                <option value="0">Nenhuma categoria</option>

                {{/each}}
            </select>

           
                <button class="btn btn-success mt-4"
                type="submit">Editar postagem</button>
           
        </form>
    </div>
</div>
